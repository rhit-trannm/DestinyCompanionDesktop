<Window x:Class="WPFD2.Inventory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFD2"
        mc:Ignorable="d"
        ResizeMode="CanMinimize"
        Title="Inventory" Height="686" Width="1480">
    <Window.Style>
        <Style TargetType="Window" BasedOn="{StaticResource {x:Type Window}}"/>
    </Window.Style>
    <Grid>
        <ListView x:Name="EquippedItemsChart" Margin="33,64,1020,365" Style="{StaticResource BaseButtonStyle}" ScrollViewer.VerticalScrollBarVisibility="Disabled">
            <ListView.ItemContainerStyle>
                <Style TargetType="ListViewItem">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="Focusable" Value="false"/>
                </Style>
            </ListView.ItemContainerStyle>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Slot" Width="100" DisplayMemberBinding="{Binding Path=SlotName}"/>
                    <GridViewColumn Header="Item" Width="327" DisplayMemberBinding="{Binding Path=ItemName}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="33,43,0,0" TextWrapping="Wrap" Text="Equipped" VerticalAlignment="Top"/>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled"  x:Name ="InventoryKinetic" Margin="448,64,904,365" Style="{StaticResource BaseButtonStyle}" Grid.Column="1">

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Kinetic" Width="125" DisplayMemberBinding="{Binding Path=ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled"  x:Name ="InventoryEnergy" Margin="576,64,778,365" Style="{StaticResource BaseButtonStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Energy" Width="125" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name ="InventoryPower" Margin="702,64,652,365" Style="{StaticResource BaseButtonStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Power" Width="125" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name ="InventoryHelmet" Margin="828,64,526,365" Style="{StaticResource BaseButtonStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Helmet" Width="125" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name ="InventoryGauntlet" Margin="954,64,400,365" Style="{StaticResource BaseButtonStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Gauntlet" Width="125" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name ="InventoryChest" Margin="1080,64,274,365" Style="{StaticResource BaseButtonStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Chest" Width="125" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name ="InventoryLeg" Margin="1206,64,148,365" Style="{StaticResource BaseButtonStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Leg" Width="125" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name ="InventoryClass" Margin="1332,64,22,365" Style="{StaticResource BaseButtonStyle}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Class" Width="125" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>


        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="465,43,0,0" TextWrapping="Wrap" Text="Inventory" VerticalAlignment="Top"/>
        <ListView x:Name="VaultDisplay" Margin="448,409,27,20" Style="{StaticResource BaseButtonStyle}">


            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Name" Width="1005" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock x:Name="textBlock_Copy1" HorizontalAlignment="Left" Margin="448,388,0,0" TextWrapping="Wrap" VerticalAlignment="Top"><Run Text="Vault"/><LineBreak/><Run/></TextBlock>
        <ComboBox x:Name="CharacterSelection" HorizontalAlignment="Left" Margin="33,376,0,0" VerticalAlignment="Top" Width="120" Text="Character" SelectionChanged="CharacterSelection_SelectionChanged"/>
        <Canvas>
        <Button x:Name="button" Content="&gt;&gt;&gt;&gt;" Margin="373,311,1032,315" Width="75" Height="44" BorderBrush="Black"/>
        <Button x:Name="button_Copy" Content="&lt;&lt;&lt;&lt;" Margin="448,311,957,315" Width="75" Height="44" BorderBrush="#FF060000"/>
        <Button x:Name="button_Copy1" Content="&lt;&lt;&lt;&lt;" Margin="576,311,829,315" Width="75" Height="44" BorderBrush="Black"/>
        <Button x:Name="button_Copy2" Content="&lt;&lt;&lt;&lt;" Margin="702,311,703,315" Width="75" Height="44" BorderBrush="Black"/>
        <Button x:Name="button_Copy3" Content="&lt;&lt;&lt;&lt;" Margin="828,311,577,315" Width="75" Height="44" BorderBrush="Black"/>
        <Button x:Name="button_Copy4" Content="&lt;&lt;&lt;&lt;" Margin="954,311,451,315" Width="75" Height="44" BorderBrush="Black"/>
        <Button x:Name="button_Copy5" Content="&lt;&lt;&lt;&lt;" Margin="1080,311,325,315" Width="75" Height="44" BorderBrush="Black"/>
        <Button x:Name="button_Copy6" Content="&lt;&lt;&lt;&lt;" Margin="1206,311,199,315" Width="75" Height="44" BorderBrush="Black"/>
        <Button x:Name="button_Copy7" Content="&lt;&lt;&lt;&lt;" Margin="1332,311,73,315" Width="75" Height="44" BorderBrush="Black"/>
        </Canvas>
        <!--
        <Button x:Name="updateManifests" Content="Button" HorizontalAlignment="Left" Margin="33,372,0,0" VerticalAlignment="Top" Click="updateManifests_Click"/>
        -->

    </Grid>

</Window>
