            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Leg" Width="160" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>
        <ListView ScrollViewer.HorizontalScrollBarVisibility="Disabled" x:Name ="InventoryClass" Margin="1616,64,14,365" Style="{StaticResource BaseButtonStyle}" Background="#FF4A4949">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Class" Width="160" DisplayMemberBinding="{Binding ItemName}" />
                </GridView>
            </ListView.View>
        </ListView>

        <TextBlock x:Name="textBlock_Copy" HorizontalAlignment="Left" Margin="461,14,0,0" TextWrapping="Wrap" Text="Inventory" VerticalAlignment="Top"/>
        <ListView x:Name="VaultDisplay" Margin="465,409,788,20" Style="{StaticResource BaseButtonStyle}" Background="#FF4A4949">


            <ListView.View>
